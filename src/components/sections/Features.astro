---
import FeatureCard from '@/components/ui/FeatureCard.astro'

const features = [
  {
    title: 'Equilibrio Perfecto',
    desc: 'Nuestro tueste medio resalta la dulzura natural y los matices frutales de cada grano, logrando una taza equilibrada y llena de matices.',
    img: '/coffee-beans.webp',
  },
  {
    title: 'Hecho con Corazón',
    desc: 'Cada lote es una obra de arte. Tostamos de forma artesanal y manual, poniendo todo nuestro amor en cada proceso para que llegue perfecto a tu taza.',
    img: '/coffee-grinder.webp',
  },
  {
    title: 'Esencia Pura',
    desc: 'Recupera el sabor auténtico del café de origen. Sin adornos, solo la pureza de la tierra y el aroma de lo que es verdaderamente real.',
    img: '/mokapot.webp',
  },
]
---

<section
  id="features"
  data-aos="fade-up"
  class="relative bg-white/50 px-6 py-24 md:px-12 lg:px-24"
>
  <div class="mx-auto max-w-7xl">
    <div class="mb-16 space-y-4 text-center">
      <span class="font-hand text-primary text-xl">
        ¿Por qué somos diferentes?
      </span>
      <h2 class="font-heading text-foreground text-4xl font-bold md:text-5xl">
        El Camino de lo Artesanal
      </h2>
    </div>

    <div class="grid grid-cols-1 gap-10 md:grid-cols-3">
      {
        features.map((feature, index) => (
          <FeatureCard
            title={feature.title}
            desc={feature.desc}
            img={feature.img}
            index={index}
          />
        ))
      }
    </div>
  </div>
</section>
