---
import FeatureCard from '@/components/ui/FeatureCard.astro'

const features = [
  {
    title: 'Maestros del Relax',
    desc: 'Aprende el arte milenario de disfrutar el momento, tal como lo haces con una taza de café.',
    img: '/coffee-beans.webp',
  },
  {
    title: 'Espíritu Vibrante',
    desc: 'Redescubre tu energía. Persigue tus sueños con la misma intensidad que un grano tostado a mano.',
    img: '/coffee-grinder.webp',
  },
  {
    title: 'Nutrición para el Alma',
    desc: 'Alimenta tu corazón con amor incondicional y el aroma de lo auténtico.',
    img: '/mokapot.webp',
  },
]
---

<section
  id="features"
  data-aos="fade-up"
  class="relative bg-white/50 px-6 py-24 md:px-12 lg:px-24"
>
  <div class="mx-auto max-w-7xl">
    <div class="mb-16 space-y-4 text-center">
      <span class="font-hand text-primary text-xl">
        ¿Por qué somos diferentes?
      </span>
      <h2 class="font-heading text-foreground text-4xl font-bold md:text-5xl">
        El Camino de lo Artesanal
      </h2>
    </div>

    <div class="grid grid-cols-1 gap-10 md:grid-cols-3">
      {
        features.map((feature, index) => (
          <FeatureCard
            title={feature.title}
            desc={feature.desc}
            img={feature.img}
            index={index}
          />
        ))
      }
    </div>
  </div>
</section>
